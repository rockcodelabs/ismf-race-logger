#!/bin/bash -e

# RuboCop check script for ISMF Race Logger
# Usage:
#   bin/rubocop-check           # Check all files
#   bin/rubocop-check --fix     # Auto-fix issues
#   bin/rubocop-check app/      # Check specific directory

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running RuboCop...${NC}"

# Check if running in Docker
if [ -f /.dockerenv ]; then
  # Inside Docker container
  if [ "$1" = "--fix" ]; then
    bundle exec rubocop -A "${@:2}"
  else
    bundle exec rubocop "$@"
  fi
else
  # Outside Docker - use docker compose
  if [ "$1" = "--fix" ]; then
    echo -e "${YELLOW}Auto-fixing issues...${NC}"
    docker compose exec -T app bundle exec rubocop -A "${@:2}"
  else
    docker compose exec -T app bundle exec rubocop "$@"
  fi
fi

EXIT_CODE=$?

if [ $EXIT_CODE -eq 0 ]; then
  echo -e "${GREEN}✓ RuboCop passed!${NC}"
else
  echo -e "${RED}✗ RuboCop found issues${NC}"
  if [ "$1" != "--fix" ]; then
    echo -e "${YELLOW}Tip: Run 'bin/rubocop-check --fix' to auto-fix simple issues${NC}"
  fi
  exit $EXIT_CODE
fi