<div class="min-h-screen bg-linear-to-br from-ismf-navy via-ismf-blue to-ismf-navy flex items-center justify-center px-4 py-12">
  <!-- Background pattern -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-ismf-red/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-ismf-blue/20 rounded-full blur-3xl"></div>
  </div>

  <div class="relative z-10 w-full max-w-md">
    <!-- Logo -->
    <div class="text-center mb-8">
      <%= link_to root_path, class: "inline-flex items-center gap-3" do %>
        <div class="w-12 h-12 bg-ismf-red rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <div class="text-left">
          <span class="text-white font-bold text-xl">ISMF</span>
          <span class="text-ismf-red font-medium text-sm block -mt-1">Race Logger</span>
        </div>
      <% end %>
    </div>

    <!-- Login Card -->
    <div class="bg-white rounded-2xl shadow-2xl p-8">
      <!-- Flash messages -->
      <% if alert = flash[:alert] %>
        <div class="flash-alert mb-6">
          <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= alert %></span>
        </div>
      <% end %>

      <% if notice = flash[:notice] %>
        <div class="flash-notice mb-6">
          <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= notice %></span>
        </div>
      <% end %>

      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-2xl font-bold text-ismf-navy">Welcome Back</h1>
        <p class="mt-2 text-ismf-gray">Sign in to your account to continue</p>
      </div>

      <!-- Form -->
      <%= form_with url: session_url, class: "space-y-6" do |form| %>
        <div>
          <label for="email_address" class="form-label">Email Address</label>
          <%= form.email_field :email_address, 
              required: true, 
              autocomplete: "username", 
              placeholder: "you@example.com", 
              value: params[:email_address], 
              class: "form-input" %>
        </div>

        <div>
          <div class="flex items-center justify-between mb-1">
            <label for="password" class="form-label mb-0">Password</label>
            <%= link_to "Forgot password?", new_password_path, class: "text-sm text-ismf-red hover:text-ismf-blue transition-colors" %>
          </div>
          <%= form.password_field :password, 
              required: true, 
              autocomplete: "current-password", 
              placeholder: "Enter your password", 
              maxlength: 72, 
              class: "form-input" %>
        </div>

        <div>
          <%= form.submit "Sign In", class: "btn-primary w-full py-3 text-base cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <!-- Footer -->
    <p class="mt-8 text-center text-white/50 text-sm">
      Â© <%= Date.current.year %> International Ski Mountaineering Federation
    </p>
  </div>
</div>
