<div class="space-y-6">
  <!-- Page header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-ismf-navy">Dashboard</h1>
      <p class="mt-1 text-sm text-ismf-gray">Welcome to the ISMF Race Logger admin panel.</p>
    </div>
  </div>

  <!-- Stats grid -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2">
    <!-- Total Users -->
    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="shrink-0">
            <div class="w-12 h-12 bg-ismf-blue rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-ismf-gray truncate">Total Users</dt>
              <dd class="text-3xl font-bold text-ismf-navy"><%= @total_users %></dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-6 py-3 border-t border-gray-100">
        <%= link_to admin_users_path, class: "text-sm font-medium text-ismf-red hover:text-ismf-blue inline-flex items-center gap-1.5" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          View all users
        <% end %>
      </div>
    </div>

    <!-- New User -->
    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="shrink-0">
            <div class="w-12 h-12 bg-fop-success rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-ismf-gray truncate">New User</dt>
              <dd class="text-3xl font-bold text-ismf-navy">+</dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-6 py-3 border-t border-gray-100">
        <%= link_to new_admin_user_path, class: "text-sm font-medium text-ismf-red hover:text-ismf-blue inline-flex items-center gap-1.5" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
          </svg>
          Create user
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Users -->
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-lg font-semibold text-ismf-navy">Recent Users</h2>
    </div>
    <%= link_to admin_users_path, class: "text-sm font-medium text-ismf-red hover:text-ismf-blue inline-flex items-center gap-1.5" do %>
      View all
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    <% end %>
  </div>

  <div class="card">
    <div class="table-container border-0 rounded-none">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% if @recent_users.any? %>
            <% @recent_users.each do |user| %>
              <tr>
                <td class="font-medium">
                  <%= link_to user.display_name, admin_user_path(user), class: "text-ismf-navy hover:text-ismf-red" %>
                </td>
                <td class="text-ismf-gray"><%= user.email_address %></td>
                <td>
                  <% if user.admin? %>
                    <span class="badge-danger">Admin</span>
                  <% else %>
                    <span class="badge-info">User</span>
                  <% end %>
                </td>
                <td class="text-ismf-gray"><%= user.created_at.strftime("%b %d, %Y") %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4" class="text-center py-8 text-ismf-gray">
                No users yet. <%= link_to "Create one", new_admin_user_path, class: "text-ismf-red hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
