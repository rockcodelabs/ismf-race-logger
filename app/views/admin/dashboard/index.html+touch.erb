<% content_for :page_title, "Dashboard" %>

<div class="h-screen touch-spacing overflow-hidden flex flex-col">
  <!-- Main Content Grid -->
  <div class="grid grid-cols-2 gap-3 mb-4 flex-shrink-0">
    <!-- Total Users Card (Clickable) -->
    <%= link_to admin_users_path, class: "bg-white rounded-2xl shadow-xl p-6 flex flex-col items-center justify-center min-h-[140px] hover:bg-gray-50 active:bg-gray-100 transition" do %>
      <div class="w-16 h-16 bg-ismf-blue rounded-xl flex items-center justify-center mb-3">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </div>
      <p class="text-base font-bold text-ismf-gray mb-1">Total Users</p>
      <p class="text-4xl font-extrabold text-ismf-navy"><%= @total_users %></p>
    <% end %>

    <!-- New User Card (Clickable) -->
    <%= link_to new_admin_user_path, class: "bg-white rounded-2xl shadow-xl p-6 flex flex-col items-center justify-center min-h-[140px] hover:bg-gray-50 active:bg-gray-100 transition" do %>
      <div class="w-16 h-16 bg-fop-success rounded-xl flex items-center justify-center mb-3">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
        </svg>
      </div>
      <p class="text-base font-bold text-ismf-gray mb-1">New User</p>
      <svg class="w-12 h-12 text-ismf-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    <% end %>
  </div>

  <!-- Recent Users -->
  <div class="bg-white rounded-2xl shadow-xl p-4 flex-1 flex flex-col min-h-0">
    <div class="flex items-center justify-between mb-3 flex-shrink-0">
      <h2 class="text-xl font-bold text-ismf-navy">Recent Users</h2>
      <%= link_to admin_users_path, class: "text-sm font-semibold text-ismf-red hover:text-ismf-blue" do %>
        View all â†’
      <% end %>
    </div>
    
    <% if @recent_users.any? %>
      <div class="space-y-3 touch-scrollable flex-1">
        <% @recent_users.each do |user| %>
          <%= link_to admin_user_path(user), class: "block bg-gray-50 rounded-xl p-3 hover:bg-gray-100 active:bg-gray-200 transition" do %>
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <p class="text-lg font-bold text-ismf-navy"><%= user.display_name %></p>
                <p class="text-sm text-ismf-gray mt-0.5"><%= user.email_address %></p>
                <p class="text-xs text-ismf-gray mt-0.5"><%= user.created_at.strftime("%b %d, %Y") %></p>
              </div>
              <div class="ml-4">
                <% if user.admin? %>
                  <span class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-bold text-white bg-ismf-red">Admin</span>
                <% else %>
                  <span class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-bold text-white bg-ismf-blue">User</span>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="flex-1 flex flex-col items-center justify-center">
        <svg class="h-16 w-16 text-ismf-gray opacity-50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <p class="text-lg text-ismf-gray mb-4">No users yet</p>
        <%= link_to new_admin_user_path, class: "touch-btn touch-btn-primary inline-flex" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 2rem; height: 2rem;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          <span>Create First User</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>