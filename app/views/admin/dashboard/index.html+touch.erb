<% content_for :page_title, "Dashboard" %>

<div class="h-screen touch-spacing overflow-hidden flex flex-col">
  <!-- Main Content Grid -->
  <div class="grid grid-cols-3 gap-3 mb-4 shrink-0 touch-content-with-nav">
    <!-- Total Users Card (Clickable) -->
    <%= link_to admin_users_path, class: "bg-white rounded-2xl shadow-xl p-6 flex flex-col items-center justify-center min-h-[140px] hover:bg-gray-50 active:bg-gray-100 transition" do %>
      <div class="w-16 h-16 bg-ismf-blue rounded-xl flex items-center justify-center mb-3">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </div>
      <p class="text-sm font-bold text-ismf-gray mb-1">Users</p>
      <p class="text-3xl font-extrabold text-ismf-navy"><%= @total_users %></p>
    <% end %>

    <!-- Competitions Card (Clickable) -->
    <%= link_to admin_competitions_path, class: "bg-white rounded-2xl shadow-xl p-6 flex flex-col items-center justify-center min-h-[140px] hover:bg-gray-50 active:bg-gray-100 transition" do %>
      <div class="w-16 h-16 bg-ismf-red rounded-xl flex items-center justify-center mb-3">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
        </svg>
      </div>
      <p class="text-sm font-bold text-ismf-gray mb-1">Competitions</p>
      <svg class="w-12 h-12 text-ismf-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    <% end %>

    <!-- New User Card (Clickable) -->
    <%= link_to new_admin_user_path, class: "bg-white rounded-2xl shadow-xl p-6 flex flex-col items-center justify-center min-h-[140px] hover:bg-gray-50 active:bg-gray-100 transition" do %>
      <div class="w-16 h-16 bg-fop-success rounded-xl flex items-center justify-center mb-3">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
        </svg>
      </div>
      <p class="text-sm font-bold text-ismf-gray mb-1">New User</p>
      <svg class="w-12 h-12 text-ismf-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    <% end %>
  </div>

  <!-- Recent Users -->
  <div class="bg-white rounded-2xl shadow-xl p-4 flex-1 flex flex-col min-h-0 shrink-0">
    <div class="flex items-center justify-between mb-3 shrink-0">
      <h2 class="text-xl font-bold text-ismf-navy">Recent Users</h2>
      <%= link_to admin_users_path, class: "text-sm font-semibold text-ismf-red hover:text-ismf-blue" do %>
        View all â†’
      <% end %>
    </div>
    
    <% if @recent_users.any? %>
      <!-- Compact List (More Items Visible, Still Touch-Friendly) -->
      <div class="space-y-1.5 touch-scrollable flex-1">
        <% @recent_users.each do |user| %>
          <%= link_to admin_user_path(user), class: "block bg-white rounded-lg p-3 border border-gray-200 hover:bg-gray-50 active:bg-gray-100 transition min-h-[72px]" do %>
            <div class="flex items-center justify-between gap-3">
              <div class="flex items-center gap-3 flex-1 min-w-0">
                <!-- Small Avatar Badge -->
                <div class="shrink-0 w-12 h-12 rounded-xl <%= user.admin? ? 'bg-ismf-red' : 'bg-ismf-blue' %> flex items-center justify-center">
                  <span class="text-xl font-bold text-white"><%= user.display_name[0].upcase %></span>
                </div>
                
                <!-- Stacked Info -->
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2">
                    <p class="text-base font-bold text-ismf-navy truncate"><%= user.display_name %></p>
                    <% if user.admin? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-extrabold text-white bg-ismf-red shrink-0">Admin</span>
                    <% end %>
                  </div>
                  <p class="text-xs text-ismf-gray truncate"><%= user.email_address %></p>
                </div>
              </div>
              
              <!-- Arrow Indicator -->
              <svg class="w-6 h-6 text-ismf-gray shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          <% end %>
        <% end %>
      </div>

    <% else %>
      <div class="flex-1 flex flex-col items-center justify-center">
        <svg class="h-16 w-16 text-ismf-gray opacity-50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <p class="text-lg text-ismf-gray mb-4">No users yet</p>
        <%= link_to new_admin_user_path, class: "touch-btn touch-btn-primary inline-flex" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 2rem; height: 2rem;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          <span>Create First User</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>