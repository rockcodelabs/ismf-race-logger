<div class="space-y-6">
  <!-- Page header with back button -->
  <div class="flex items-center gap-4">
    <%= link_to admin_competition_path(@competition), class: "inline-flex items-center justify-center w-10 h-10 rounded-lg text-gray-500 hover:text-ismf-blue hover:bg-blue-50 transition-all" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    <% end %>
    <div>
      <h1 class="text-2xl font-bold text-ismf-navy">Edit Competition</h1>
      <p class="mt-1 text-sm text-ismf-gray"><%= @competition.display_name %></p>
    </div>
  </div>

  <!-- Form card -->
  <div class="card">
    <div class="p-6">
      <%= render "form", competition: @competition_form %>
    </div>
  </div>
</div>
