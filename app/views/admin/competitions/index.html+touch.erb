<% content_for :page_title, "Competitions" %>

<div class="h-screen overflow-hidden flex flex-col">
  <!-- Status Filter Tabs -->
  <div class="shrink-0 px-3 pt-3 pb-2">
    <div class="flex gap-2">
      <%= link_to admin_competitions_path, 
          class: "flex-1 py-4 px-3 text-center text-base font-bold rounded-xl transition #{params[:status].blank? ? 'bg-ismf-blue text-white shadow-lg' : 'bg-white text-ismf-navy border-2 border-gray-200'}" do %>
        <div>All</div>
        <div class="text-xs font-normal opacity-80"><%= @status_counts[:upcoming] + @status_counts[:ongoing] + @status_counts[:past] %></div>
      <% end %>
      
      <%= link_to admin_competitions_path(status: :upcoming), 
          class: "flex-1 py-4 px-3 text-center text-base font-bold rounded-xl transition #{params[:status] == 'upcoming' ? 'bg-blue-100 text-blue-800 border-2 border-blue-300' : 'bg-white text-ismf-navy border-2 border-gray-200'}" do %>
        <div>Upcoming</div>
        <div class="text-xs font-normal opacity-80"><%= @status_counts[:upcoming] %></div>
      <% end %>
      
      <%= link_to admin_competitions_path(status: :ongoing), 
          class: "flex-1 py-4 px-3 text-center text-base font-bold rounded-xl transition #{params[:status] == 'ongoing' ? 'bg-green-100 text-green-800 border-2 border-green-300' : 'bg-white text-ismf-navy border-2 border-gray-200'}" do %>
        <div>Ongoing</div>
        <div class="text-xs font-normal opacity-80"><%= @status_counts[:ongoing] %></div>
      <% end %>
      
      <%= link_to admin_competitions_path(status: :past), 
          class: "flex-1 py-4 px-3 text-center text-base font-bold rounded-xl transition #{params[:status] == 'past' ? 'bg-gray-100 text-gray-800 border-2 border-gray-300' : 'bg-white text-ismf-navy border-2 border-gray-200'}" do %>
        <div>Past</div>
        <div class="text-xs font-normal opacity-80"><%= @status_counts[:past] %></div>
      <% end %>
    </div>
  </div>

  <!-- Competitions List Container -->
  <div class="bg-white rounded-t-2xl shadow-xl flex-1 flex flex-col min-h-0">
    <% if @competitions.any? %>
      <!-- Competitions Grid -->
      <div class="grid grid-cols-2 gap-2 px-3 pt-3 pb-3 overflow-y-auto touch-scrollable">
        <% @competitions.each do |competition| %>
          <%= link_to admin_competition_path(competition), class: "bg-white rounded-xl border-2 border-gray-200 hover:border-ismf-blue active:border-ismf-red transition overflow-hidden flex flex-col" do %>
            <!-- Header with Status Badge -->
            <div class="p-3 border-b border-gray-100">
              <div class="flex items-start justify-between gap-2 mb-2">
                <h3 class="text-base font-bold text-ismf-navy line-clamp-1">
                  <%= competition.display_name %>
                </h3>
                <span class="px-2 py-1 text-xs font-bold rounded-full shrink-0 <%= competition.status_badge_class %>">
                  <%= competition.status.titleize %>
                </span>
              </div>
              <p class="text-sm text-ismf-gray">
                <%= competition.country_flag_emoji %> <%= competition.city %>
              </p>
            </div>

            <!-- Details -->
            <div class="p-3 space-y-2 flex-1">
              <!-- Location -->
              <div class="flex items-center gap-2 text-sm text-ismf-gray">
                <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="truncate"><%= competition.place %></span>
              </div>

              <!-- Dates -->
              <div class="flex items-center gap-2 text-sm text-ismf-gray">
                <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span class="truncate"><%= competition.short_date_range %></span>
              </div>

              <!-- Duration / Status -->
              <div class="flex items-center gap-2 text-sm font-medium">
                <svg class="w-4 h-4 shrink-0 text-ismf-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-ismf-navy">
                  <%= competition.duration_days %> day<%= 's' if competition.duration_days != 1 %>
                </span>
                <% if competition.upcoming? %>
                  <span class="text-blue-600 text-xs">
                    • <%= competition.days_until_start %> days
                  </span>
                <% elsif competition.ongoing? %>
                  <span class="text-green-600 text-xs font-bold">
                    • Live now
                  </span>
                <% end %>
              </div>
            </div>

            <!-- View Details Footer -->
            <div class="p-3 bg-gray-50 border-t border-gray-100">
              <div class="flex items-center justify-center gap-2 text-ismf-blue text-sm font-bold">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                View Details
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="flex-1 flex flex-col items-center justify-center px-6 py-8">
        <svg class="h-20 w-20 text-ismf-gray opacity-50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
        </svg>
        <h3 class="text-xl font-bold text-ismf-navy mb-2">
          <% if params[:search].present? %>
            No competitions found
          <% else %>
            No competitions yet
          <% end %>
        </h3>
        <p class="text-base text-ismf-gray text-center">
          <% if params[:search].present? %>
            Try adjusting your search or filters
          <% elsif params[:status].present? %>
            No <%= params[:status] %> competitions at this time
          <% else %>
            Competitions will appear here when added
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>