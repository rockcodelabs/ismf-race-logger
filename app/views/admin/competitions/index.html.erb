<div class="space-y-6">
  <!-- Page header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-ismf-navy">Competitions</h1>
      <p class="mt-1 text-sm text-ismf-gray">Manage all competitions in the system.</p>
    </div>
    <%= link_to new_admin_competition_path, class: "btn-primary whitespace-nowrap" do %>
      <svg class="w-5 h-5 mr-2 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      <span>Add Competition</span>
    <% end %>
  </div>

  <!-- Filters and search -->
  <div class="card">
    <div class="p-4 space-y-4">
      <!-- Status filter tabs -->
      <div class="flex items-center gap-2 overflow-x-auto">
        <%= link_to admin_competitions_path, 
            class: "px-4 py-2 text-sm font-medium rounded-lg transition-colors #{params[:status].blank? ? 'bg-ismf-blue text-white' : 'text-gray-600 hover:bg-gray-100'}" do %>
          All
          <span class="ml-1 text-xs opacity-75">(<%= @status_counts[:upcoming] + @status_counts[:ongoing] + @status_counts[:past] %>)</span>
        <% end %>
        
        <%= link_to admin_competitions_path(status: :upcoming), 
            class: "px-4 py-2 text-sm font-medium rounded-lg transition-colors #{params[:status] == 'upcoming' ? 'bg-blue-100 text-blue-800' : 'text-gray-600 hover:bg-gray-100'}" do %>
          Upcoming
          <span class="ml-1 text-xs opacity-75">(<%= @status_counts[:upcoming] %>)</span>
        <% end %>
        
        <%= link_to admin_competitions_path(status: :ongoing), 
            class: "px-4 py-2 text-sm font-medium rounded-lg transition-colors #{params[:status] == 'ongoing' ? 'bg-green-100 text-green-800' : 'text-gray-600 hover:bg-gray-100'}" do %>
          Ongoing
          <span class="ml-1 text-xs opacity-75">(<%= @status_counts[:ongoing] %>)</span>
        <% end %>
        
        <%= link_to admin_competitions_path(status: :past), 
            class: "px-4 py-2 text-sm font-medium rounded-lg transition-colors #{params[:status] == 'past' ? 'bg-gray-100 text-gray-800' : 'text-gray-600 hover:bg-gray-100'}" do %>
          Past
          <span class="ml-1 text-xs opacity-75">(<%= @status_counts[:past] %>)</span>
        <% end %>
      </div>

      <!-- Search form -->
      <%= form_with url: admin_competitions_path, method: :get, class: "flex gap-2" do |f| %>
        <%= f.hidden_field :status, value: params[:status] if params[:status].present? %>
        <div class="flex-1">
          <%= f.text_field :search, 
              value: params[:search],
              placeholder: "Search by name, city, or place...",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ismf-blue focus:border-transparent" %>
        </div>
        <%= f.submit "Search", class: "btn-secondary" %>
        <% if params[:search].present? %>
          <%= link_to "Clear", admin_competitions_path(status: params[:status]), class: "btn-secondary" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Competitions grid -->
  <% if @competitions.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @competitions.each do |competition| %>
        <div class="card hover:shadow-lg transition-shadow">
          <div class="p-6 space-y-4">
            <!-- Header with logo/city -->
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="text-lg font-bold text-ismf-navy">
                  <%= competition.display_name %>
                </h3>
                <p class="text-sm text-ismf-gray mt-1">
                  <%= competition.country_flag_emoji %> <%= competition.country_name %>
                </p>
              </div>
              <span class="px-3 py-1 text-xs font-medium rounded-full <%= competition.status_badge_class %>">
                <%= competition.status.titleize %>
              </span>
            </div>

            <!-- Competition details -->
            <div class="space-y-2">
              <div class="flex items-center text-sm text-ismf-gray">
                <svg class="w-4 h-4 mr-2 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <%= competition.place %>
              </div>

              <div class="flex items-center text-sm text-ismf-gray">
                <svg class="w-4 h-4 mr-2 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <%= competition.short_date_range %>
              </div>

              <div class="flex items-center text-sm text-ismf-gray">
                <svg class="w-4 h-4 mr-2 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <%= competition.duration_days %> day<%= 's' if competition.duration_days != 1 %>
                <% if competition.upcoming? %>
                  • <%= competition.days_until_start %> days until start
                <% elsif competition.ongoing? %>
                  • In progress
                <% end %>
              </div>
            </div>

            <!-- Actions -->
            <div class="flex items-center gap-2 pt-4 border-t border-gray-100">
              <%= link_to admin_competition_path(competition), class: "flex-1 btn-secondary text-center" do %>
                <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                View
              <% end %>
              <%= link_to edit_admin_competition_path(competition), class: "flex-1 btn-secondary text-center" do %>
                <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty state -->
    <div class="card">
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-ismf-navy">
          <% if params[:search].present? %>
            No competitions found
          <% else %>
            No competitions yet
          <% end %>
        </h3>
        <p class="mt-1 text-sm text-ismf-gray">
          <% if params[:search].present? %>
            Try adjusting your search terms or filters.
          <% else %>
            Get started by creating a new competition.
          <% end %>
        </p>
        <% unless params[:search].present? %>
          <div class="mt-6">
            <%= link_to new_admin_competition_path, class: "btn-primary whitespace-nowrap" do %>
              <svg class="w-5 h-5 mr-2 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              <span>Add Competition</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
