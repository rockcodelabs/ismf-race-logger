<div class="space-y-6">
  <!-- Page header -->
  <div class="flex items-center gap-4">
    <%= link_to admin_users_path, class: "p-2 text-ismf-gray hover:text-ismf-navy transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
    <% end %>
    <div>
      <h1 class="text-2xl font-bold text-ismf-navy">New User</h1>
      <p class="mt-1 text-sm text-ismf-gray">Create a new user account.</p>
    </div>
  </div>

  <!-- Form card -->
  <div class="card">
    <div class="card-body">
      <%= render "form", user: @user %>
    </div>
  </div>
</div>