<div class="space-y-6">
  <!-- Page header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-ismf-navy">Users</h1>
      <p class="mt-1 text-sm text-ismf-gray">Manage all users in the system.</p>
    </div>
    <%= link_to new_admin_user_path, class: "btn-primary whitespace-nowrap" do %>
      <svg class="w-5 h-5 mr-2 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      <span>Add User</span>
    <% end %>
  </div>

  <!-- Users table -->
  <div class="card">
    <div class="table-container border-0 rounded-none">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created</th>
            <th class="text-right">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% if @users.any? %>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <div class="flex items-center">
                    <div class="shrink-0 w-10 h-10 bg-ismf-blue rounded-full flex items-center justify-center">
                      <span class="text-white font-medium text-sm">
                        <%= user.name.first.upcase rescue user.email_address.first.upcase %>
                      </span>
                    </div>
                    <div class="ml-4">
                      <div class="font-medium text-ismf-navy"><%= user.display_name %></div>
                    </div>
                  </div>
                </td>
                <td class="text-ismf-gray"><%= user.email_address %></td>
                <td>
                  <% if user.admin? %>
                    <span class="badge-danger">Admin</span>
                  <% else %>
                    <span class="badge-info">User</span>
                  <% end %>
                </td>
                <td class="text-ismf-gray"><%= user.created_at.strftime("%b %d, %Y") %></td>
                <td class="text-right">
                  <div class="flex items-center justify-end gap-1">
                    <%= link_to admin_user_path(user), class: "inline-flex items-center justify-center w-9 h-9 rounded-lg text-gray-500 hover:text-ismf-blue hover:bg-blue-50 transition-all", title: "View" do %>
                      <svg class="w-[18px] h-[18px]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                    <%= link_to edit_admin_user_path(user), class: "inline-flex items-center justify-center w-9 h-9 rounded-lg text-gray-500 hover:text-ismf-red hover:bg-red-50 transition-all", title: "Edit" do %>
                      <svg class="w-[18px] h-[18px]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    <% end %>
                    <% unless user == Current.user %>
                      <%= button_to admin_user_path(user), method: :delete, class: "inline-flex items-center justify-center w-9 h-9 rounded-lg text-gray-500 hover:text-red-600 hover:bg-red-50 transition-all", title: "Delete", data: { turbo_confirm: "Are you sure you want to delete this user?" } do %>
                        <svg class="w-[18px] h-[18px]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-ismf-navy">No users</h3>
                <p class="mt-1 text-sm text-ismf-gray">Get started by creating a new user.</p>
                <div class="mt-6">
                  <%= link_to new_admin_user_path, class: "btn-primary whitespace-nowrap" do %>
                    <svg class="w-5 h-5 mr-2 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    <span>Add User</span>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
