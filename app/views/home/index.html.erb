<div class="min-h-screen bg-gradient-to-br from-ismf-navy via-ismf-blue to-ismf-navy">
  <!-- Navigation -->
  <nav class="absolute top-0 left-0 right-0 z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-20">
        <!-- Logo -->
        <%= link_to root_path, class: "flex items-center gap-3 hover:opacity-90 transition-opacity" do %>
          <div class="w-10 h-10 bg-ismf-red rounded-lg flex items-center justify-center">
            <%= image_tag "ismf_official_logo.png", alt: "ISMF", class: "h-6 w-auto" %>
          </div>
          <div>
            <span class="text-white font-semibold text-lg">ISMF</span>
            <span class="text-ismf-red font-medium text-sm block -mt-1">Race Logger</span>
          </div>
        <% end %>
        
        <!-- Auth links -->
        <div class="flex items-center gap-4">
          <% if Current.user %>
            <% if Current.user.admin? %>
              <%= link_to admin_root_path, class: "btn-primary text-sm" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                </svg>
                <span>Dashboard</span>
              <% end %>
            <% else %>
              <%= link_to "#", class: "btn-primary text-sm" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>Account Settings</span>
              <% end %>
            <% end %>
            <%= button_to session_path, method: :delete, class: "text-white/80 hover:text-white transition-colors font-medium text-sm" do %>
              Sign Out
            <% end %>
          <% else %>
            <%= link_to new_session_path, class: "btn-primary text-sm" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
              </svg>
              <span>Sign In</span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="relative min-h-screen flex items-center justify-center">
    <!-- Background pattern -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-ismf-red/10 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-ismf-blue/20 rounded-full blur-3xl"></div>
    </div>
    
    <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8">
      <!-- Logo icon -->
      <div class="mx-auto w-24 h-24 bg-ismf-red rounded-2xl flex items-center justify-center shadow-2xl mb-8">
        <%= image_tag "ismf_official_logo.png", alt: "ISMF", class: "h-14 w-auto" %>
      </div>
      
      <!-- Title -->
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-4">
        ISMF Race Logger
      </h1>
      
      <!-- Subtitle -->
      <p class="text-xl sm:text-2xl text-white/70 mb-8 max-w-2xl mx-auto">
        Professional race incident tracking and management for 
        <span class="text-ismf-red font-semibold">International Ski Mountaineering Federation</span>
      </p>
      
      <!-- Go to Competition Button (if available) -->
      <% if @closest_competition %>
        <div class="mb-6">
          <%= link_to admin_competition_path(@closest_competition.id), class: "inline-flex items-center gap-3 px-8 py-4 bg-ismf-red hover:bg-ismf-red/90 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all text-lg" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            <div class="text-left">
              <div class="font-bold"><%= @closest_competition.display_name %></div>
              <div class="text-sm opacity-90">
                <%= @closest_competition.ongoing? ? "ðŸŸ¢ Live Now" : "Starts in #{@closest_competition.days_until_start} days" %>
              </div>
            </div>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
      <% end %>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <% if Current.user %>
        <% else %>
          <%= link_to new_session_path, class: "btn-primary px-8 py-3 text-lg" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
            <span>Sign In</span>
          <% end %>
        <% end %>
      </div>
      
      <!-- Features grid -->
      <div class="mt-16 grid grid-cols-1 sm:grid-cols-3 gap-6 max-w-4xl mx-auto">
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-left">
          <div class="w-12 h-12 bg-ismf-red/20 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-ismf-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-white font-semibold mb-2">Real-Time Tracking</h3>
          <p class="text-white/60 text-sm">Log incidents as they happen with instant synchronization across all devices.</p>
        </div>
        
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-left">
          <div class="w-12 h-12 bg-fop-success/20 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-fop-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-white font-semibold mb-2">Official Decisions</h3>
          <p class="text-white/60 text-sm">Process reports and make official race decisions with full audit trails.</p>
        </div>
        
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-left">
          <div class="w-12 h-12 bg-fop-info/20 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-fop-info" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-white font-semibold mb-2">Field Ready</h3>
          <p class="text-white/60 text-sm">Optimized for tablets and mobile devices in challenging race conditions.</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Footer -->
  <footer class="absolute bottom-0 left-0 right-0 py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-center text-white/40 text-sm">
        Â© <%= Date.current.year %> International Ski Mountaineering Federation. All rights reserved.
      </p>
      <% unless touch_display? %>
        <%= link_to "Switch to Touch Mode", root_path(touch: 1), class: "block text-center text-white/30 text-xs mt-2 hover:text-white/50" %>
      <% end %>
    </div>
  </footer>
</div>
