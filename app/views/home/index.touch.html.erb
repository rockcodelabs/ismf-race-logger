<div class="h-screen flex flex-col px-6 py-6" style="height: 480px;">
  <!-- Top spacing -->
  <div class="flex-shrink-0" style="height: 40px;"></div>
  
  <!-- Content area -->
  <div class="flex-1 flex flex-col items-center justify-center">
    <!-- Logo -->
    <div class="w-24 h-24 bg-ismf-red/20 rounded-2xl flex items-center justify-center mb-4 shadow-xl backdrop-blur-sm border-2 border-ismf-red/30">
      <svg class="text-white w-14 h-14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
      </svg>
    </div>
    
    <!-- Title -->
    <h1 class="text-3xl font-extrabold text-white mb-1 text-center tracking-tight">
      ISMF Race Logger
    </h1>
    <p class="text-base text-white/60 mb-6 text-center font-medium">
      Race Incident Management
    </p>
    
    <!-- Main Actions -->
    <div class="w-full max-w-md flex flex-col gap-3">
      <% if Current.user %>
        <% if Current.user.admin? %>
          <%= link_to admin_root_path, class: "touch-btn touch-btn-primary" do %>
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 2rem; height: 2rem;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
            </svg>
            <span>Dashboard</span>
          <% end %>
          
          <%= button_to session_path, method: :delete, class: "touch-btn touch-btn-secondary" do %>
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 2rem; height: 2rem;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            <span>Sign Out</span>
          <% end %>
        <% else %>
          <%= button_to session_path, method: :delete, class: "touch-btn touch-btn-primary" do %>
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 2rem; height: 2rem;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            <span>Sign Out</span>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to new_session_path, class: "touch-btn touch-btn-primary" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 2rem; height: 2rem;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
          </svg>
          <span>Sign In</span>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <!-- Footer - hidden on 7" display -->
  <div class="flex-shrink-0" style="height: 20px;"></div>
</div>