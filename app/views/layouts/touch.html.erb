        const keyboard = document.getElementById('virtual-keyboard');
        const previewText = document.getElementById('preview-text');
        let keyboardHeight = 0;
        
        // Update preview text display
        const updatePreview = () => {
          if (!activeInput) {
            previewText.textContent = '';
            return;
          }
          
          const value = activeInput.value;
          
          if (activeInput.type === 'password') {
            // Show bullets for password fields
            previewText.textContent = value ? '•'.repeat(value.length) : '';
          } else {
            // Show actual text for other inputs
            previewText.textContent = value || '';
          }
        };
        
        // Position keyboard properly for viewport
        const updateKeyboardPosition = () => {
          if (keyboard.style.display !== 'none') {
            const visualViewport = window.visualViewport;
            if (visualViewport) {
              keyboard.style.bottom = '0px';
              keyboard.style.left = visualViewport.offsetLeft + 'px';
              keyboard.style.width = visualViewport.width + 'px';
            }
          }
        };
        
        // Show keyboard on ANY input/textarea focus
        document.addEventListener('focus', function(e) {
          if (e.target.matches('input[type="text"], input[type="email"], input[type="password"], textarea')) {
            activeInput = e.target;
            keyboard.style.display = 'block';
            updatePreview(); // This will show preview only if there's text
            
            // Listen for input changes to update preview
            const inputHandler = () => updatePreview();
            activeInput.addEventListener('input', inputHandler);
            activeInput.addEventListener('blur', function cleanup() {
              activeInput.removeEventListener('input', inputHandler);
              activeInput.removeEventListener('blur', cleanup);
            });
            
            // Get keyboard height after it's displayed
            setTimeout(() => {
              keyboardHeight = keyboard.offsetHeight;
              updateKeyboardPosition();
              
              // Scroll input into view - keep it visible above keyboard
              const inputRect = e.target.getBoundingClientRect();
              const availableSpace = window.visualViewport ? 
                window.visualViewport.height - keyboardHeight : 
                window.innerHeight - keyboardHeight;
              
              if (inputRect.bottom > availableSpace - 20) {
                // Scroll so input is visible above keyboard
                const scrollAmount = inputRect.bottom - (availableSpace - 20);
                window.scrollBy({ top: scrollAmount, behavior: 'smooth' });
              }
            }, 100);
          }
        }, true);
        
        // Handle viewport changes (orientation, browser chrome)
        if (window.visualViewport) {
          window.visualViewport.addEventListener('resize', updateKeyboardPosition);
          window.visualViewport.addEventListener('scroll', updateKeyboardPosition);
        }
        
        // Handle keyboard clicks
        keyboard.addEventListener('click', function(e) {
          if (!e.target.classList.contains('kbd-key')) return;
          
          const key = e.target.dataset.key;
          
          // Hide keyboard button
          if (e.target.classList.contains('kbd-hide')) {
            keyboard.style.display = 'none';
            if (activeInput) {
              activeInput.blur();
              activeInput = null;
            }
            previewText.textContent = '';
            return;
          }
          
          if (!activeInput) return;
          
          const val = activeInput.value;
          
          // Special character toggle button
          if (e.target.classList.contains('kbd-special')) {
            specialCharIndex = (specialCharIndex + 1) % specialChars.length;
            const newChar = specialChars[specialCharIndex];
            e.target.textContent = newChar;
            e.target.dataset.key = newChar;
            return;
          }
          
          // Enter key - submit form or insert newline
          if (key === 'enter') {
            if (activeInput.tagName === 'TEXTAREA') {
              // Insert newline in textarea
              activeInput.value = val + '\n';
            } else {
              // Submit form for input fields
              const form = activeInput.closest('form');
              if (form) {
                form.requestSubmit();
              }
            }
            activeInput.dispatchEvent(new Event('input', { bubbles: true }));
            updatePreview();
            return;
          }
          
          // Handle special keys
          if (key === 'backspace') {
            activeInput.value = val.slice(0, -1);
          } else if (key === 'shift') {
            isShiftActive = !isShiftActive;
            e.target.classList.toggle('active', isShiftActive);
            return; // Don't trigger input event yet
          } else {
            // Regular character
            let char = key;
            if (key === 'space') {
              char = ' ';
            } else if (isShiftActive && key.length === 1) {
              char = key.toUpperCase();
              isShiftActive = false;
              document.querySelector('.kbd-shift').classList.remove('active');
            }
            activeInput.value = val + char;
          }
          
          // Trigger input event for form validation
          activeInput.dispatchEvent(new Event('input', { bubbles: true }));
          updatePreview();
          
          // Audio feedback
          const audioContext = new (window.AudioContext || window.webkitAudioContext)();
          const oscillator = audioContext.createOscillator();
          const gainNode = audioContext.createGain();
          oscillator.connect(gainNode);
          gainNode.connect(audioContext.destination);
          oscillator.frequency.value = 800;
          oscillator.type = 'sine';
          gainNode.gain.setValueAtTime(0.05, audioContext.currentTime);
          gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.05);
          oscillator.start(audioContext.currentTime);
          oscillator.stop(audioContext.currentTime + 0.05);
        });
      })();
    </script>
